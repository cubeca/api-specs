{
    "$schema": "https://json-schema.org/draft-04/schema",
    "id": "https://docs.cubecommons.ca/schemas/bff/search_response.json",
    "title": "BFF - Search response",
    "description": "BFF - Response for combined content and profile search",
    "type": "object",
    "properties": {
        "contentResults": {
            "type": "object",
            "properties": {
                "meta": {
                    "type": "object",
                    "properties": {
                        "offset": {
                            "type": "integer",
                            "description": "Offset into the result set"
                        },
                        "limit": {
                            "type": "integer",
                            "description": "Max number of items to return"
                        },
                        "filters": {
                            "$ref": "./search_filters.json",
                            "description": "Filters for which content is returned"
                        }
                    },
                    "required": ["offset", "limit"]
                },
                "data": {
                    "type": "array",
                    "items": {
                        "$ref": "../content/storage.json"
                    }
                },
                "status": {
                    "type": "integer",
                    "description": "HTTP status code"
                },
                "error": {
                    "type": "string",
                    "description": "Error message, if any"
                }
            },
            "required": ["meta", "data", "status", "error"]
        },
        "profileResults": {
            "type": "object",
            "properties": {
                "meta": {
                    "type": "object",
                    "properties": {
                        "offset": {
                            "type": "integer",
                            "description": "Offset into the result set"
                        },
                        "limit": {
                            "type": "integer",
                            "description": "Max number of items to return"
                        },
                        "filters": {
                            "$ref": "./search_filters.json",
                            "description": "Filters for which profiles are returned"
                        }
                    },
                    "required": ["offset", "limit"]
                },
                "data": {
                    "type": "array",
                    "items": {
                        "$ref": "../profiles/storage.json"
                    }
                },
                "status": {
                    "type": "integer",
                    "description": "HTTP status code"
                },
                "error": {
                    "type": "string",
                    "description": "Error message, if any"
                }
            },
            "required": ["meta", "data", "status", "error"]
        }
    },
    "required": ["contentResults", "profileResults"]
}
