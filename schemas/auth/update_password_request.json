{
    "$schema": "https://json-schema.org/draft-04/schema",
    "id": "https://docs.cubecommons.ca/schemas/auth/login_request.json",
    "title": "Update Password Request",
    "description": "Update password flow request",
    "type": "object",
    "properties": {
        "uuid": {
            "type": "string",
            "description": "Id of the user that is changing password"
        },
        "currentPassword": {
            "type": "string",
            "description": "Current password"
        },
        "newPassword": {
            "type": "string",
            "description": "New password"
        },
        "token": {
            "type": "string",
            "description": "JWT"
        }
    },
    "required": [
        "uuid",
        "newPassword",
        "token"
    ],
    "additionalProperties": false
}
