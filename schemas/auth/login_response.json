{
    "$id": "https://api.cube.strengthinnumbers.business/schemas/auth/login_response.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "OAuth2 password flow response",
    "description": "OAuth2 password flow response",
    "type": "object",
    "properties": {
        "access_token": {
            "type": "string",
            "description": "OAuth2 access token."
        },
        "refresh_token": {
            "type": "string",
            "description": "OAuth2 refresh token."
        },
        "token_type": {
            "type": "string",
            "description": "OAuth2 access token type. We only use 'Bearer' here.",
            "enum": [
                "Bearer"
            ],
            "const": "Bearer"
        },
        "expires_in": {
            "type": "integer",
            "description": "OAuth2 access token."
        }
    },
    "required": [
        "access_token",
        "refresh_token",
        "token_type",
        "expires_in"
    ],
    "additionalProperties": false
}
