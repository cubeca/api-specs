{
    "$schema": "https://json-schema.org/draft-04/schema",
    "id": "https://docs.cubecommons.ca/schemas/auth/login_request.json",
    "title": "Email and Password JWT Request",
    "description": "OAuth2 password flow request",
    "type": "object",
    "properties": {
        "email": {
            "type": "string",
            "description": "The email entered by the user."
        },
        "password": {
            "type": "string",
            "description": "The password entered by the user."
        }
    },
    "required": [
        "email",
        "password"
    ],
    "additionalProperties": false
}
