{
    "$id": "https://docs.cubecommons.ca/schemas/auth/login_request.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Username and Password JWT Request",
    "description": "OAuth2 password flow request",
    "type": "object",
    "properties": {
        "username": {
            "type": "string",
            "description": "The username entered by the user."
        },
        "password": {
            "type": "string",
            "description": "The password entered by the user."
        }
    },
    "required": [
        "username",
        "password"
    ],
    "additionalProperties": false
}
