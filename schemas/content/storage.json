{
    "$schema": "https://json-schema.org/draft-04/schema",
    "id": "https://docs.cubecommons.ca/schemas/content/storage.json",
    "title": "Content Storage",
    "description": "Storage schema for content microservice",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "format": "uuid"
        },
        "profileId": {
            "type": "string",
            "format": "uuid"
        },
        "type": {
            "type": "string",
            "enum": [
                "video",
                "audio",
                "pdf"
            ]
        },
        "category": {
            "type": "string",
            "enum": [
                "all",
                "video",
                "audio",
                "vr",
                "pdf",
                "digital-publications",
                "talks",
                "performances",
                "cultural-teachings",
                "featured"
            ]
        },
        "title": {
            "type": "string"
        },
        "expiry": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "coverImageFileId": {
            "type": "string",
            "format": "uuid"
        },
        "mediaFileId": {
            "type": "string",
            "format": "uuid"
        },
        "subtitlesFileId": {
            "type": "string",
            "format": "uuid"
        },
        "transcriptFileId": {
            "type": "string",
            "format": "uuid"
        },
        "coverImageText": {
            "type": "string"
        },
        "collaborators": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "contributors": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "tags": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "required": [
        "profileId",
        "type",
        "category",
        "title",
        "expiry",
        "description",
        "coverImageFileId",
        "mediaFileId",
        "coverImageText",
        "collaborators",
        "contributors"
    ]
}
