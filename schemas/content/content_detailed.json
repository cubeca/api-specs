{
    "$schema": "https://json-schema.org/draft-04/schema",
    "id": "https://docs.cubecommons.ca/schemas/content/content_detailed.json",
    "title": "ContentDetails",
    "description": "Content details",
    "type": "object",
    "properties": {
        "id": {
            "$ref": "./storage.json#/properties/id"
        },
        "url": {
            "type": "string",
            "format": "url"
        },
        "title": {
            "$ref": "./storage.json#/properties/title"
        },
        "createdDate": {
            "type": "string"
        },
        "updatedDate": {
            "type": "string"
        },
        "description": {
            "$ref": "./storage.json#/properties/description"
        },
        "descriptionAudioUrl": {
            "type": "string",
            "format": "url",
            "description": "URL of audio file for description"
        },
        "contributors": {
            "type": "array",
            "items": {
                "$ref": "./contributor.json"
            }
        },
        "tags": {
            "$ref": "./storage.json#/properties/tags"
        },
        "creator": {
            "type": "string"
        },
        "credits": {
            "type": "string"
        },
        "thumbnailUrl": {
            "type": "string",
            "format": "url"
        },
        "iconUrl": {
            "type": "string",
            "format": "url"
        },
        "mediaUrl": {
            "type": "string",
            "format": "uuid"
        },
        "subtitlesUrl": {
            "type": "string",
            "format": "uuid"
        },
        "transcriptUrl": {
            "type": "string",
            "format": "uuid"
        },
        "category": {
            "$ref": "./storage.json#/properties/category"
        },
        "type": {
            "$ref": "./storage.json#/properties/type"
        }
    },
    "required": [
        "id",
        "url",
        "title",
        "createdDate",
        "updatedDate",
        "description",
        "descriptionUrl",
        "contributors",
        "tags",
        "creator",
        "thumbnailUrl",
        "iconUrl",
        "category",
        "type"
    ]
}
