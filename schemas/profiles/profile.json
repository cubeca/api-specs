{
    "$id": "https://docs.cubecommons.ca/schemas/profiles/profile.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Profile main schema",
    "description": "Profile main schema",
    "type": "object",
    "properties": {
        "id": {
            "type": "string"
        },
        "organization": {
            "type": "string"
        },
        "heroUrl": {
            "type": "string",
            "format": "url"
        },
        "logoUrl": {
            "type": "string",
            "format": "url"
        },
        "description": {
            "type": "string"
        },
        "descriptionUrl": {
            "type": "string",
            "description": "URL of audio file for description"
        },
        "videos": {
            "type": "array",
            "items": {
                "$ref": "./content.json"
            }
        }
    },
    "required": [
        "id",
        "name",
        "description",
        "descriptionUrl",
        "videos"
    ]
}
